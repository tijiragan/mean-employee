        "EMPLOYEE_CREATE_PAYLOAD_SCHEMA": {
            "additionalProperties": false,
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 1,
                    "example": "Example Employee Name"
                },
                "dob": {
                    "type": "string",
                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                    "maxLength": 19,
                    "example": "1994-01-16"
                },
                "email": {
                    "type": "string",
                    "pattern": ".+\\@.+\\..+",
                    "maxLength": 75,
                    "example": "example@mail.com"
                },
                "department": {
                    "type": "string",
                    "minLength": 1,
                    "example": "exampleDeparment"
                },
                "gender": {
                    "type": "string",
                    "minLength": 1,
                    "example": "Male"
                },
                "age": {
                    "type": "string",
                    "minLength": 1,
                    "example": "23 years"
                }
            },
            "required": [
                "name",
